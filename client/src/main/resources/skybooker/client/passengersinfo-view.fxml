                <HBox alignment="CENTER" spacing="40">
                    <Text text="First Name">
                        <font>
                            <Font name="Roboto" size="20" />
                        </font>
                    </Text>
                    <Text text="Last Name">
                        <font>
                            <Font name="Roboto" size="20" />
                        </font>
                    </Text>
                    <Text text="Category">
                        <font>
                            <Font name="Roboto" size="20" />
                        </font>
                    </Text>
                    <Text text="Class">
                        <font>
                            <Font name="Roboto" size="20" />
                        </font>
                    </Text>
                </HBox>
                <Separator />
            </VBox>
        </ScrollPane>
    </VBox>

</HBox>
